<h1 class="mb-4">Available Books</h1>

<% if @books.any? %>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= link_to book.title, book_path(book), class: "text-decoration-none" %></h5>
            <p class="card-text text-muted">by <%= book.author %></p>
            <p class="card-text"><strong>ISBN:</strong> <%= book.isbn %></p>
            <span class="badge <%= book.available ? 'bg-success' : 'bg-danger' %>">
              <%= book.available ? "Available" : "Borrowed" %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">No books available.</p>
<% end %>

