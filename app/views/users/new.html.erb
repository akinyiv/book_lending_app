<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h2 class="mb-4 text-center text-primary">Create an Account</h2>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <strong>Oops! Something went wrong:</strong>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: users_path, class: "needs-validation", novalidate: true do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name", required: true, value: @user.name.to_s.strip %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true, value: @user.email.to_s.strip.downcase %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="mt-3 text-center">
      Already have an account? <%= link_to "Login", login_path, class: "text-decoration-none" %>
    </p>
  </div>
</div>
