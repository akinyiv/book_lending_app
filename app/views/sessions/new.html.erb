<h2>Login</h2>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>
  
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>
  
  <div>
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= link_to "Sign up", new_user_path %>
